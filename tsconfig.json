{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": false, // required as swagger-jsdoc is used to generate swagger definition from javadocs
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist/",
        "target": "es5",
        "lib": ["es5", "es6", "dom", "esnext.asynciterable"]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}
